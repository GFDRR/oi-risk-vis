{
  "version": 8,
  "name": "Flood",
  "center": [
    -64.405087,
    -34.919628
  ],
  "height": "600px",
  "zoom": 4,
  "bearing": 0,
  "pitch": 0,
  "sources": {
    "boundaries": {
      "type": "vector",
      "url": "mbtiles://{boundaries}"
    },
    "flood": {
      "type": "vector",
      "url": "mbtiles://{flood}"
    }
  },
  "glyphs": "{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#c6e1ff"
      }
    },
    {
      "id": "landuse-neighbour",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "admin_0_boundaries",
      "paint": {
        "fill-color": "#e0e0e0"
      }
    },
    {
      "id": "landuse-neighbour-borders",
      "type": "line",
      "source": "boundaries",
      "source-layer": "admin_0_boundaries",
      "paint": {
        "line-color": "#ffffff",
        "line-width": 2
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "admin_1_boundaries",
      "paint": {
        "fill-color": "#d2d2d2"
      },
      "minzoom": 4
    },
    {
      "id": "landuse-borders",
      "type": "line",
      "source": "boundaries",
      "source-layer": "admin_1_boundaries",
      "paint": {
        "line-color": "#ffffff",
        "line-width": 2
      },
      "minzoom": 4
    },
    {
      "id": "water",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "physical_lakes",
      "paint": {
        "fill-color": "#c6e1ff"
      }
    },
    {
      "id": "country_labels",
      "type": "symbol",
      "source": "boundaries",
      "source-layer": "admin_0_labels",
      "layout": {
        "text-field": "{name}",
        "symbol-placement": "point"
      },
      "filter": [
        "all",
        [
          "!=",
          "name",
          "Argentina"
        ]
      ]
    },
    {
      "id": "flood_1m2m",
      "type": "fill",
      "source": "flood",
      "source-layer": "FU_1in500_1m2m_threshold",
