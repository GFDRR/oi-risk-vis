        "fill-color": "#bd0026"
      }
    },
    {
      "id": "country_labels_argentina",
      "type": "symbol",
      "source": "boundaries",
      "source-layer": "admin_0_labels",
      "layout": {
        "text-field": "{name}",
        "symbol-placement": "point"
      },
      "maxzoom": 4,
      "filter": [
        "all",
        [
          "==",
