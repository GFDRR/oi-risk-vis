{
  "version": 8,
  "name": "Overview",
  "center": [-64.405087, -34.919628],
  "height": "600px",
  "zoom": 4,
  "bearing": 0,
  "pitch": 0,
  "sources": {
    "boundaries": { "type": "vector", "url": "mbtiles://{boundaries}" },
    "road": { "type": "vector", "url": "mbtiles://{road}" },
    "air": { "type": "vector", "url": "mbtiles://{air}" },
    "water": { "type": "vector", "url": "mbtiles://{water}" }
  },
  "glyphs": "{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#c6e1ff"
      }
    },
    {
      "id": "landuse-neighbour",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "admin_0_boundaries",
      "paint": {
        "fill-color": "#e0e0e0",
        "fill-outline-color": "#fff"
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "admin_1_boundaries",
      "paint": {
        "fill-color": "#d2d2d2",
        "fill-outline-color": "#ffffff"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "physical_lakes",
      "paint": {
        "fill-color": "#c6e1ff"
      }
    },
    {
      "id": "waterway",
      "type": "circle",
      "source": "water",
      "source-layer": "port_nodes",
      "paint": {
        "circle-color": "#045a8d",
        "circle-radius": {
          "base": 2,
          "stops": [[11, 4], [17, 50]]
        }
      }
    },
    {
      "id": "road_all",
      "type": "line",
      "source": "road",
      "source-layer": "road_edges",
      "minzoom": 6,
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": [
          "match",
          ["get", "road_type"],
          "rural", "#1f99e0",
          "province", "#e0881f",
          "national", "#ba0f03",
          "#fff"
        ],
        "line-width": 2
      }
    },
    {
      "id": "road_national",
      "type": "line",
      "source": "road",
      "source-layer": "road_edges",
      "maxzoom": 6,
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ba0f03",
        "line-width": 2
      },
      "filter": ["==", "road_type", "national"]
    },
    {
      "id": "aeroway",
      "type": "circle",
      "source": "air",
      "source-layer": "air_nodes",
      "paint": {
        "circle-color": "#000000",
        "circle-radius": {
          "base": 1.5,
          "stops": [[8, 1], [20, 8]]
        }
      }
    },
    {
      "id": "country_labels",
      "type": "symbol",
      "source": "boundaries",
      "source-layer": "admin_0_labels",
      "layout": {
        "text-field": "{text}",
        "symbol-placement": "point"
      }
    },
    {
      "id": "provinces_labels",
      "type": "symbol",
      "source": "boundaries",
      "source-layer": "admin_1_labels",
      "layout": {
        "text-field": "{text}",
        "symbol-placement": "point"
      }
    }
  ]
}
