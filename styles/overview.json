{
  "version": 8,
  "name": "Overview",
  "center": [-64.405087, -34.919628],
  "height": "600px",
  "zoom": 4,
  "bearing": 0,
  "pitch": 0,
  "sources": {
    "boundaries": { "type": "vector", "url": "mbtiles://{boundaries}" },
    "road": { "type": "vector", "url": "mbtiles://{road}" },
    "air": { "type": "vector", "url": "mbtiles://{air}" },
    "water": { "type": "vector", "url": "mbtiles://{water}" }
  },
  "glyphs": "{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#c6e1ff"
      }
    },
    {
      "id": "landuse-neighbour",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "admin_0_boundaries",
      "paint": {
        "fill-color": "#e0e0e0"
      }
    },
    {
      "id": "landuse-neighbour-borders",
      "type": "line",
      "source": "boundaries",
      "source-layer": "admin_0_boundaries",
      "paint": {
        "line-color": "#ffffff",
        "line-width": 2
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "admin_1_boundaries",
      "paint": {
        "fill-color": "#d2d2d2"
      },
      "minzoom": 4
    },
    {
      "id": "landuse-borders",
      "type": "line",
      "source": "boundaries",
      "source-layer": "admin_1_boundaries",
      "paint": {
        "line-color": "#ffffff",
        "line-width": 2
      },
      "minzoom": 4
    },
    {
      "id": "water",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "physical_lakes",
      "paint": {
        "fill-color": "#c6e1ff"
      }
    },
    {
      "id": "country_labels",
      "type": "symbol",
      "source": "boundaries",
      "source-layer": "admin_0_labels",
      "layout": {
        "text-field": "{text}",
        "symbol-placement": "point"
      },
      "filter": ["all", ["!=", "name", "Argentina"]]
    },
    {
      "id": "country_labels_argentina",
      "type": "symbol",
      "source": "boundaries",
      "source-layer": "admin_0_labels",
      "layout": {
        "text-field": "{text}",
        "symbol-placement": "point"
      },
      "maxzoom": 4,
      "filter": ["all", ["==", "name", "Argentina"]]
    },
    {
      "id": "provinces_labels",
      "type": "symbol",
      "source": "boundaries",
      "source-layer": "admin_1_labels",
      "layout": {
        "text-field": "{text}",
        "symbol-placement": "point"
      },
      "minzoom": 4
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "water",
      "source-layer": "port_edges",
      "paint": {
        "line-color": "#045a8d",
        "line-width": {
          "base": 1.4,
          "stops": [[11, 4], [17, 50]]
        }
      }
    },
    {
      "id": "road",
      "type": "line",
      "source": "road",
      "source-layer": "road_edges",
      "minzoom": 4,
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": [
          "match",
          ["get", "road_type"],
          "rural", "#1f99e0",
          "province", "#e0881f",
          "national", "#ba0f03",
          "#fff"
        ],
        "line-width": ["sqrt", ["get", "max_total_tons"]]
      }
    },
    {
      "id": "aeroway",
      "type": "line",
      "source": "air",
      "source-layer": "air_edges",
      "paint": {
        "line-color": "#000000",
        "line-width": {
          "base": 1.5,
          "stops": [[8, 1], [20, 8]]
        },
        "line-opacity": 1
      }
    }
  ]
}
