{
  "version": 8,
  "name": "Road network",
  "center": [
    -64.405087,
    -34.919628
  ],
  "height": "600px",
  "zoom": 4,
  "bearing": 0,
  "pitch": 0,
  "sources": {
    "boundaries": {
      "type": "vector",
      "url": "mbtiles://{boundaries}"
    },
    "road": {
      "type": "vector",
      "url": "mbtiles://{road}"
    }
  },
  "glyphs": "{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#c6e1ff"
      }
    },
    {
      "id": "landuse-neighbour",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "admin_0_boundaries",
      "paint": {
        "fill-color": "#e0e0e0"
      }
    },
    {
      "id": "landuse-neighbour-borders",
      "type": "line",
      "source": "boundaries",
      "source-layer": "admin_0_boundaries",
      "paint": {
        "line-color": "#ffffff",
        "line-width": 2
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "admin_1_boundaries",
      "paint": {
        "fill-color": "#d2d2d2"
      }
    },
    {
      "id": "landuse-borders",
      "type": "line",
      "source": "boundaries",
      "source-layer": "admin_1_boundaries",
      "paint": {
        "line-color": "#ffffff",
        "line-width": 2
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "physical_lakes",
      "paint": {
        "fill-color": "#c6e1ff"
      }
    },
    {
      "id": "country_labels",
      "type": "symbol",
      "source": "boundaries",
      "source-layer": "admin_0_boundaries_labels",
      "layout": {
        "text-field": "{name}",
        "symbol-placement": "point"
      },
      "maxzoom": 4
    },
    {
      "id": "provinces_labels",
      "type": "symbol",
      "source": "boundaries",
      "source-layer": "admin_1_boundaries_labels",
      "layout": {
        "text-field": "{name}",
        "symbol-placement": "point"
      },
      "minzoom": 3
    },
    {
      "id": "road_secondary_tertiary",
      "type": "line",
      "source": "road",
      "source-layer": "road_edges_rural",
      "minzoom": 6,
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#1f99e0",
        "line-width": {
          "base": 1.4,
          "stops": [
            [
              6,
              0.5
            ],
            [
              20,
              20
            ]
          ]
        }
      }
    },
    {
      "id": "road_trunk_primary",
      "type": "line",
      "source": "road",
      "source-layer": "road_edges_provincial",
      "minzoom": 4,
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#e0881f",
        "line-width": {
          "base": 1.4,
          "stops": [
            [
              6,
              0.5
            ],
            [
              20,
              30
            ]
          ]
        }
      }
    },
    {
      "id": "road_major_motorway",
      "type": "line",
      "source": "road",
      "source-layer": "road_edges_national",
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ba0f03",
        "line-width": {
          "base": 1.4,
          "stops": [
            [
              8,
              1
            ],
            [
              16,
              10
            ]
          ]
        },
        "line-offset": 0
      }
    }
  ]
}