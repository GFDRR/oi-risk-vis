{
  "version": 8,
  "name": "Roads",
  "center": [105.12, 16.19],
  "height": "600px",
  "zoom": 5,
  "bearing": 0,
  "pitch": 0,
  "sources": {
    "roads": { "type": "vector", "url": "mbtiles://{roads}" },
    "wb_boundaries": { "type": "vector", "url": "mbtiles://{boundaries}" }
  },
  "glyphs": "{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#c6e1ff"
      }
    },
    {
      "id": "adminboundaries",
      "type": "fill",
      "source": "wb_boundaries",
      "source-layer": "WB_countries_Admin0",
      "paint": {
        "fill-color": "#d2d2d2",
        "fill-outline-color": "#fff"
      }
    },
    {
      "id": "disputedareas",
