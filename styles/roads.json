      "minzoom": 3,
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "filter": [
        "any",
        [
          "==",
          [ "get",  "highway" ],
          "motorway"
        ],
        [
          "==",
          ["get", "highway"],
          "motorway_link"
        ]
      ],
      "paint": {
        "line-color": "#feb078",
        "line-width": [
          "+",
          [
            "/",
            ["get", "EAD_max"],
            50
          ],
          2
        ]
      }
