          [
            "/",
            ["get", "EAD_max"],
            50
          ],
          1
        ]
      }
    },
    {
      "id": "other_roads",
      "type": "line",
      "source": "roads",
      "source-layer": "IDN_EAD_Summary",
      "minzoom": 3,
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "filter": [
        "all",
        ["!=",["get", "highway"], "motorway"],
        ["!=",["get", "highway"], "motorway_link"],
