{
  "version": 8,
  "name": "Air network",
  "center": [
    -64.405087,
    -34.919628
  ],
  "height": "600px",
  "zoom": 4,
  "bearing": 0,
  "pitch": 0,
  "sources": {
    "boundaries": {
      "type": "vector",
      "url": "mbtiles://{boundaries}"
    },
    "air": {
      "type": "vector",
      "url": "mbtiles://{air}"
    }
  },
  "glyphs": "{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#c6e1ff"
      }
    },
    {
      "id": "landuse-neighbour",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "admin_0_boundaries",
      "paint": {
        "fill-color": "#e0e0e0"
      }
    },
    {
      "id": "landuse-neighbour-borders",
      "type": "line",
      "source": "boundaries",
      "source-layer": "admin_0_boundaries",
      "paint": {
        "line-color": "#ffffff",
        "line-width": 2
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "admin_1_boundaries",
      "paint": {
        "fill-color": "#d2d2d2"
      }
    },
    {
      "id": "landuse-borders",
      "type": "line",
      "source": "boundaries",
      "source-layer": "admin_1_boundaries",
      "paint": {
        "line-color": "#ffffff",
        "line-width": 2
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "physical_lakes",
      "paint": {
        "fill-color": "#c6e1ff"
      }
    },
    {
      "id": "country_labels",
      "type": "symbol",
      "source": "boundaries",
      "source-layer": "admin_0_boundaries",
      "layout": {
        "text-field": "{name}",
        "symbol-placement": "point"
      },
      "maxzoom": 4
    },
    {
      "id": "provinces_labels",
      "type": "symbol",
      "source": "boundaries",
      "source-layer": "admin_1_boundaries",
      "layout": {
        "text-field": "{name}",
        "symbol-placement": "point"
      },
      "minzoom": 4
    },
    {
      "id": "aeroway",
      "type": "line",
      "source": "air",
      "source-layer": "air_edges",
      "paint": {
        "line-color": "#000000",
        "line-width": {
          "base": 1.5,
          "stops": [
            [
              8,
              1
            ],
            [
              20,
              8
            ]
          ]
        },
        "line-opacity": 1
      }
    }
  ]
}